extends layout 


block content
    form(method="post", action="contact/send")
        h1 #{title}
        .form-group
            label Name
            input.form-control(type="text", name="name", placeholder="Enter Name")
        br
        .form-group
            label Email
            input.form-control(type="email", name="email", placeholder="Enter Email")
        br
        .form-group
            label Message
            textarea.form-control(type="message", placeholder="Enter Message")
        br
        button.btn.btn-primary.btn-lg(type="submit") Submit